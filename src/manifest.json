{
  "manifest_version": 2,
  "name": "ClipFast",
  "version": "1.0",
  "description": "Adds a 'Copy URL' button to copy any URL from the address bar.",
  "permissions": [
    "<all_urls>",
    "activeTab",
    "clipboardWrite"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Copy URL"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": [
    "share.html",
    "share.js",
    "qrcode.min.js"
  ]
}