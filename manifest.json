{
    "manifest_version": 2,
    "name": "ClipFast",
    "version": "1.0",
    "description": "Adds a 'Copy URL' button in the toolbar.",
    "permissions": ["tabs", "activeTab", "clipboardWrite"],
    "browser_action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png"
      },
      "default_title": "Copy URL"
    },
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "128": "icons/icon128.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "page_action": {
      "default_icon": "icons/icon.svg",
      "default_title": "Copy URL"
    }
  }
  